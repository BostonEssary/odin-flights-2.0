<%= form_with url: "/flights", method: :get do |form|%>
    <%= form.label :departure_airport, "Departing Airport: "%>
    <%= form.collection_select :departure_airport_id, Airport.all(), :id, :code %>
    <br>
    <%= form.label :arrival_airport, "Arrival Airport: "%>
    <%= form.collection_select :arrival_airport_id, Airport.all(), :id, :code %>
    <br>
    <%= form.label :passengers, "Number of Passengers"%>
    <%= form.number_field :passengers, in: 1..4, step: 1%>
    <br>
    <%= form.label :takeoff, "Takeoff Date"%>
    <%= form.collection_select :takeoff, Flight.all(), :takeoff, :takeoff_formatted%>
    <%= form.submit "Search"%>
<% end %>